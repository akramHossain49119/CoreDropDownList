@model RoleClaimViewModel
@using System.Security.Claims 

@{
    var roleId = ViewBag.roleId; 
}

<form method="Post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Role Claims</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.RoleClaim.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.RoleClaim[i].RoleClaimTypes" />
                    <input asp-for="@Model.RoleClaim[i].IsSelected" />
                    <label class="form-check-label" asp-for="@Model.RoleClaim[i].IsSelected">
                        @Model.RoleClaim[i].RoleClaimTypes
                    </label>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto;" />
            <a asp-action="EditRole" asp-route-id="@Model.RoleId" class="btn btn-primary" style="width:auto;"> Cancel</a>

        </div>
    </div>

</form>