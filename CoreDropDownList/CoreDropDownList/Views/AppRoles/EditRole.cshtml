@model CoreDropDownList.ViewModel.EditRoleViewModel     

@{  
    ViewBag.Title = "Edit Role";
    var roleId = ViewBag.roleId; 
} 

    <h2 style="margin-top:150px;margin-left:50px;">Edit Role</h2>
    <form method="post" class="mt-3" style="margin-top:250px; margin-left:20px;overflow:auto;"> 
        <div class="form-group row">
            <labe action asp-for="RoleId" class="col-sm-2 col-form-label">Role Id</labe>
            <div class="col-sm-10">
                <input asp-for="RoleId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <labe action asp-for="Name" class="col-sm-2 col-form-label">Role Name</labe>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"> </span>
            </div>
            <div asp-validation-summary="All" class="text-danger"> </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="Submit" class="btn btn-primary" value="Update">Update</button>
                <a asp-action="ListRoles" controller="AppRole" class="btn btn-primary">Cancel</a>
            </div>
        </div>
        <div class="card-header">
            <h2> Users In Role </h2>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment.</h5>
                }

            </div>
            <div class="card-footer">
                <a asp-action="EditUserInRole" controller="AppRoles" asp-route-roleId="@Model.RoleId" style="width: auto;" class="btn btn-primary">Add or Remove Users</a>
            </div>
        </div>
        <div class="card-header">
            <h5>Users Claims </h5>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim </h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment </h5>
            }
        </div>
        <div class="card-footer">
            <div>
                <a asp-action="RoleClaimManage" controller="AppRoles" asp-route-roleId="@Model.RoleId"  style="width: auto;" class="btn btn-primary">Manage Users Claims </a>
            </div>
        </div>
    </form>